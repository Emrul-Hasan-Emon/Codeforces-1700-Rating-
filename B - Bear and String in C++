const int lx=1e7+7;
const ll mod = 1000000007;


void solve()
{
    ll n, m, i, j, k, l, sum=0; //ll means long long int
    string s;
    cin>>s;
    for(i=0, k=0; i<s.size(); i++)
    {
        if(i+3<s.size())
        {
            if(s[i]=='b' and s[i+1]=='e' and s[i+2]=='a' and s[i+3]=='r')
            {
                l=s.size()-(i+3);
                sum+=(l*(k+1));
                k=0;
            }
            else
                k++;
        }
        else
            break;
    }
    cout<<sum<<endl;
}

void init_code()
{
    freopen("input.txt", "r", stdin);
    freopen("output.txt", "w", stdout);
}

int main()
{
    faster
//init_code();

    solve();
// A L H A M D U L I L L A H
// 1 2 3 2 1
}

